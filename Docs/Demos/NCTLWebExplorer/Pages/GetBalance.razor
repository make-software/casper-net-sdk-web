@page "/get-balance"
@inherits ExplorerComponent;

<h3>Account Balance</h3>

<div class="row">
    <div class="col-lg-12">

        @if (!string.IsNullOrWhiteSpace(ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @ErrorMessage
            </div>
        }
        @if (!string.IsNullOrWhiteSpace(SuccessMessage))
        {
            <div class="alert alert-success" role="alert">
                @((MarkupString) SuccessMessage)
            </div>
        }

        <RadzenCard Class="w-100 mb-4">
            <div class="row">
                <PublicKeyTextBox Text="Enter the account public key:" SignerRef="@SignerInterop"
                                  @bind-Value="_accountPublicKey" Class="w-100"/>
            </div>
            <div class="row mb-4">
                <RadzenRadioButtonList @bind-Value=@_queryMethod TValue="int"
                                       Orientation="Orientation.Horizontal" Change="@(OnQueryMethodChange)">
                    <Items>
                        <RadzenRadioButtonListItem Text="QueryBalance" Value="0"/>
                        <RadzenRadioButtonListItem Text="QueryBalanceDetails" Value="1"/>
                        <RadzenRadioButtonListItem Text="GetBalance (deprecated)" Value="2"/>
                    </Items>
                </RadzenRadioButtonList>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <RadzenButton Text="Get Balance" Click="@GetAccountBalanceBtnClicked" class="float-end"/>
                </div>
            </div>
        </RadzenCard>

        <RpcJsonViewer @ref="JsonViewerInstance"></RpcJsonViewer>

    </div>
</div>
