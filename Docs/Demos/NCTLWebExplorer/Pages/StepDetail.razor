@page "/steps/{EraId}"
@inherits ExplorerComponent;

@if (_stepJson is null)
{
    <h3>Loading step for era @EraId</h3>
}
else
{
    <h3>Step details</h3>
    <div class="row">
        <div class="col-lg-12">
            <RadzenCard>
                <div class="row">
                    <div class="col-md-4">
                        <div class="mt-1">Era Id</div>
                        <b>@(EraId)</b>
                    </div>
                </div>
            </RadzenCard>
            <RpcJsonViewer @ref="JsonViewerInstance" Json="@_stepJson"></RpcJsonViewer>

        </div>
    </div>
}